<h2 class='sb-title'>Spelling Bee</h2>
<div style="--primary-clr: <%= @aesthetic.primary_clr  %>; --font-clr: <%= @aesthetic.font_clr %>; --font: <%= @aesthetic.font %>; 
            --secondary-clr: <%= @aesthetic.secondary_clr %>; --tertiary-clr: <%= @aesthetic.tertiary_clr %>;">
    <div class="sb-game">
            <div class='sb-left'>
                <div class='sb-letters'>
                    <div class='sb-empty'></div>
                    <div class='sb-letter'>D</div>
                    <div class='sb-letter'>E</div>
                    <div class='sb-letter'>M</div>
                    <div class='sb-center'>O</div>
                    <div class='sb-letter'>D</div>
                    <div class='sb-letter'>E</div>
                    <div class='sb-letter'>M</div>
                    <div class='sb-empty'></div>
                </div>
                <div class='sb-input'>
                    <input type="text" name="sbword" placeholder="Enter your word here..." required minlength="4" maxlength="11" autocomplete="off" pattern="[A-Za-z]+" title="Only letters are allowed." disabled />
                    <button class="btn btn-login btn-admin" type="button">Submit</button>
                </div>
            </div>
            <div class='sb-right', style="padding: 5px;">
                <div class='sb-score'>
                    <h3 style="font-family: var(--font);">Score: DEMO </h3>
                </div>
                <p>Found words:</p>
                <div class='sb-words'>
                    DEMO DEMO DEMO DEMO DEMO DEMO
                </div>
            </div>
    </div>
</div>
 