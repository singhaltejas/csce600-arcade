<%= render "shared/all_pages_nav" %>

<h1>Edit Spelling Bee for <%= @bee.play_date.strftime("%B %d") %></h1>

<%= render 'form', bee: @bee %>

<div style="font-family: Verdana, sans-serif;">
    <h2>Valid Words</h2>
    <ul>
    Total Score: <%= @total_score %>
    <% sorted_words = @valid_words.sort_by { |word| word.length - 3 } %>
    <% sorted_words.each do |word| %>
        <% score = word.length - 3 %>
        <li><%= word %> (<%= score %>)</li>
    <% end %>
    </ul>
</div>