<div class="container">
  <!-- Greeting and Login Section -->
  <div class="header">
    <h2>Hello, <%="Guest" %>!</h2>
    <h3>
    <%=
      if @user and @user.role.name != 'Member'
        "You are logged in as #{ @user.role.name }"
      end
    %>
    </h3>
    
    <div>
    <% if session[:guest] %>
      <!-- Login Button -->
      <%= button_to "Login with Google", "/auth/google_oauth2", data: {turbo: "false"}, class: 'btn btn-login' %>
    <% else %>    
      <!-- My Account Dropdown -->
      <div class="dropdown">
        <button class="dropbtn">My Account</button>
        <div class="dropdown-content">
          <%= link_to 'Game Statistics', '#' %>
          <%= link_to 'Update', '#' %>
          <%= link_to 'Log Out', logout_path, method: :delete %>
        </div>
      </div>
    <% end %>

    <% if @user and @user.role.name =='System Admin' %>
    <%= link_to 'All Users for Admin', '#', class: 'btn btn-login btn-admin' %>
    <% end%>
    </div>
  </div>

  <!-- Games Section -->

<%= render "games" %>