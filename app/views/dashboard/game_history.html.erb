<%= render "shared/all_pages_nav" %>
<h1><%= @game.name %> - Game History</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <% @game_history.each do |game| %>
      <tr>
        <td><%= game.played_on %></td>
        <td><%= game.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="user-options">
  <%= link_to "Back to Dashboard", dashboard_path, class:"btn btn-login" %>
</div>